    "initial_scene": "intro",
    "choreography": [
        {
            "id": "intro_sequence",
            "trigger": "load",
            "actions": [
                {
                    "target": "camera",
                    "type": "pan",
                    "duration": 2.0,
                    "to": [
                        0,
                        2,
                        5
                    ]
                },
                {
                    "target": "monolith",
                    "type": "fade_in",
                    "duration": 1.5,
                    "delay": 0.5
                }
            ]
        },
        {
            "id": "scroll_timeline",
            "trigger": "scroll",
            "segments": [
                {
                    "start": 0,
                    "end": 0.1,
                    "actions": [
                        {
                            "target": "monolith",
                            "param": "rotation.y",
                            "from": 0,
                            "to": 1.57
                        }
                    ]
                },
                {
                    "start": 0.15,
                    "end": 0.25,
                    "actions": [
                        {
                            "type": "switch_scene",
                            "to": "solar"
                        }
                    ]
                },
                {
                    "start": 0.25,
                    "end": 0.5,
                    "actions": [
                        {
                            "target": "camera",
                            "param": "position.z",
                            "from": 50,
                            "to": 20
                        }
                    ]
                }
            },
            {
                "start": 0.3,
                "end": 0.35,
                "actions": [
                    {
                        "type": "switch_scene",
                        "to": "overview"
                    }
                ]
            },
            {
                "start": 0.5,
                "end": 0.55,
                "actions": [
                    {
                        "type": "switch_scene",
                        "to": "landscape"
                    }
                ]
            },
            {
                "start": 0.7,
                "end": 0.75,
                "actions": [
                    {
                        "type": "switch_scene",
                        "to": "history"
                    }
                ]
            },
            {
                "start": 0.9,
                "end": 0.95,
                "actions": [
                    {
                        "type": "switch_scene",
                        "to": "ending"
                    }
                ]
            }
        ]
    }
